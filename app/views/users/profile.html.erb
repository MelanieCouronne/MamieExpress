<div class="container">
  <h1>Mon profil</h1>



  <div class="container rounded bg-white mt-4 mb-5">
    <%= simple_form_for @user, url: user_registration_path do |f| %>
      <div class="row">
        <div class="col-md-3 border-right">
          <div class="d-flex flex-column align-items-center text-center p-3 py-5">
            <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
            <span class="font-weight-bold"id='name-user'></span>
            <span class="text-black-50" id='email-user'></span>
            <span></span>
          </div>
        </div>
          <div class="col-md-5 border-right">
            <div class="p-3 py-5">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Profile Settings</h4>
              </div>
              <div class="row mt-2">
                <div class="col-md-6">
                  <%= f.input :first_name, placeholder: 'first name', value: @user.first_name %>
                </div>
                <div class="col-md-6">
                  <%= f.input :last_name, placeholder: 'last name', value: @user.last_name %>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12">
                  <%= f.input :email, placeholder: 'email', value: @user.email %>
                </div>
              </div>

              <h4 class="text-left">Change password</h4>

              <div class="row mt-3">
                <div class="col">
                  <div class="form-group">
                      <%= f.input :password, placeholder: '••••••', value: @user.password %>
                  </div>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col">
                  <div class="form-group">
                      <%= f.input :password_confirmation, placeholder: '••••••', value: @user.password %>
                  </div>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col">
                  <div class="form-group">
                      <%= f.input :current_password, placeholder: '••••••', value: @user.password %>
                  </div>
                </div>
              </div>

            </div>
          </div>
          <div class="col-md-4">
            <div class="p-2 py-5">
              <div class="d-flex justify-content-between align-items-center experience">
                <span>Je suis chauffeur</span>
                <span class="border px-3 p-1 add-experience">&nbsp;Experience</span>
              </div><br>
              <div class="col-md-12">
                <%= f.input :type_of_car, placeholder: 'voiture', value: @user.type_of_car %>
              </div> <br>
            </div>
            <div class="p-2">
              <div class="d-flex justify-content-between align-items-center experience">
                <span>J'ai une granny</span>
                <span class="border px-3 p-1 add-experience">
                  <i class="fa fa-plus"></i>&nbsp;Experience
                </span>
              </div><br>


            </div>
          </div>
      </div>
      <%= f.button :submit, 'Save Profile',class: "btn btn-danger profile-button" %>
    <% end %>
  </div>


</div>
