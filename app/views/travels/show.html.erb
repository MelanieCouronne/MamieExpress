<div class="background">
  <div class="container">
    <h1>Résumé du trajet</h1>

    <div class="cards">
       <% if policy(@travel).show? %>
        <div class="card">
          <div class="card-title">
            <h2 class="card-departure-date">
              <% if @travel.departure_date.strftime("%A") == "Monday" %>
                <%= "Lundi" %>
                <% elsif @travel.departure_date.strftime("%A") == "Tuesday" %>
                  <%= "Mardi" %>
                <% elsif @travel.departure_date.strftime("%A") == "Wednesday" %>
                  <%= "Mercredi" %>
                <% elsif @travel.departure_date.strftime("%A") == "Thursday" %>
                  <%= "Jeudi" %>
                <% elsif @travel.departure_date.strftime("%A") == "Friday" %>
                  <%= "Vendredi" %>
                <% elsif @travel.departure_date.strftime("%A") == "Saturday" %>
                  <%= "Samedi" %>
                <% elsif @travel.departure_date.strftime("%A") == "Sunday" %>
                  <%= "Dimanche" %>
              <% end %>
              <%= @travel.departure_date.day %> <%= @travel.departure_date.strftime('%B') %>
            </h2>
            <% if !policy(@travel).update? %>
              <span><%= @travel.user.first_name %> <%= @travel.user.last_name %></span>
              <% if @travel.user.photo.attached? %>
                <%= cl_image_tag @travel.user.photo.key, class: "avatar", height: 50, width: 50, crop: :fill %>
              <% else %>
                <%= image_tag("mamie_head-small.png", class: "avatar") %>
              <% end %>
            <% else %>
              <div class="d-flex justify-content-end">
                <%= link_to 'Mamie livrée', travel_path(@travel, status: true), id:"validation-travel", class:"btn btn-danger", method: 'PATCH', data: { confirm: "Bravo! Vous avez rendu une famille heureuse pour Noël." } %>
              </div>
            <% end %>
          </div>
          <div class="card-part-up">
            <div class="card-departure">
              <h3><%= @travel.departure_date.to_s(:time) %></h3><%= image_tag 'trait_trajet.png', class:'trait-trajet' %><h4 class='text-departure-location'><%= @travel.departure_location.capitalize %></h4>
            </div>
              <div class="card-links">

                <% if policy(@travel).update? %>
                  <%= link_to edit_travel_path(@travel) do %>
                    <i class="far fa-edit"></i>
                  <% end %>
                <% end %>

                <% if policy(@travel).destroy? %>
                  <%= link_to travel_path(@travel),
                    method: :delete,
                    data: { confirm: "Es-tu vraiment sûr de supprimer ce voyage ?" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                <% end %>
              </div>
          </div>

          <div class="card-arrival">
            <h4 class='text-arrival-location'><%= @travel.arrival_location.capitalize %></h4>
          </div>

          <div class="card-passenger-number">
            <p>Nombre de passagers : <%= @travel.number_passenger %></p>
          </div>

          <div id="map"
            style="width: 100%; height: 300px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>

        </div>
       <% end %>
    </div>

  </div>
</div>
